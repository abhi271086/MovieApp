<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/moviecard"
android:layout_width="fill_parent"
android:layout_height="100dp"
android:layout_gravity="center"
android:layout_margin="4dp"
card_view:cardCornerRadius="2dp"
card_view:cardElevation="4dp">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:id="@+id/imageview_trailer_thumbnail"
        android:contentDescription="@null"
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/poster"/>
    <TextView
        android:id="@+id/textview_trailername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imageview_trailer_thumbnail"
        android:layout_toRightOf="@+id/imageview_trailer_thumbnail"
        android:layout_alignParentBottom="true"


        android:gravity="center"
        android:text="This is trailer"
       />
</RelativeLayout>
</android.support.v7.widget.CardView>